{
	"DetailedErrors": true,
	"NLog": {
		"internalLogLevel": "Info",
		"extensions": [
			{ "assembly": "NLog.Extensions.Logging" },
			{ "assembly": "NLog.Web.AspNetCore" }
		],
		"default-wrapper": {
			"type": "AsyncWrapper",
			"overflowAction": "Block"
		},
		"targets": {
			"console": {
				"type": "ColoredConsole",
				"layout": "| ${uppercase:${level}} |${longdate}|(${logger})|${message}",
				"rowHighlightingRules": [
					{
						"condition": "level == LogLevel.Info",
						"foregroundColor": "Green"
					},
					{
						"condition": "level == LogLevel.Error",
						"foregroundColor": "Red"
					},
					{
						"condition": "level == LogLevel.Fatal",
						"foregroundColor": "Red",
						"backgroundColor": "White"
					}
				]
			},
			"file_all": {
				"type": "File",
				"fileName": "/root/logs/payment-api/log_all_${shortdate}.log",
				"layout": "| ${uppercase:${level}} |${longdate}|(${logger})|${message}"
			},
			"file_trace": {
				"type": "File",
				"fileName": "/root/logs/payment-api/log_trace_${shortdate}.log",
				"layout": "| ${uppercase:${level}} |${longdate}|(${logger})|${message}"
			},
			"file_info": {
				"type": "File",
				"fileName": "/root/logs/payment-api/log_info_${shortdate}.log",
				"layout": "| ${uppercase:${level}} |${longdate}|(${logger})|${message}"
			},
			"file_warn": {
				"type": "File",
				"fileName": "/root/logs/payment-api/log_warn_${shortdate}.log",
				"layout": "| ${uppercase:${level}} |${longdate}|(${logger})|${message}"
			},
			"file_error": {
				"type": "File",
				"fileName": "/root/logs/payment-api/log_error_${shortdate}.log",
				"layout": "| ${uppercase:${level}} |${longdate}|(${logger})|${message}"
			},
			"file_fatal": {
				"type": "File",
				"fileName": "/root/logs/payment-api/log_fatal_${shortdate}.log",
				"layout": "| ${uppercase:${level}} |${longdate}|(${logger})|${message}"
			}
		},
		"rules": [
			{
				"logger": "Microsoft.EntityFrameworkCore.Database.Command",
				"maxLevel": "Info",
				"final": true
			},
			{
				"logger": "Microsoft.AspNetCore.Mvc.Infrastructure.ControllerActionInvoker",
				"maxLevel": "Trace",
				"final": true
			},
			{
				"logger": "Microsoft.AspNetCore.Mvc.Infrastructure.ObjectResultExecutor",
				"maxLevel": "Info",
				"final": true
			},
			{
				"logger": "Microsoft.AspNetCore.HostFiltering.HostFilteringMiddleware",
				"maxLevel": "Trace",
				"final": true
			},
			{
				"logger": "Microsoft.AspNetCore.Routing.EndpointRoutingMiddleware",
				"maxLevel": "Trace",
				"final": true
			},
			{
				"logger": "Microsoft.AspNetCore.Routing.EndpointMiddleware",
				"maxLevel": "Info",
				"final": true
			},
			{
				"logger": "Microsoft.AspNetCore.Mvc.Infrastructure.ControllerActionInvoker",
				"maxLevel": "Info",
				"final": true
			},
			{
				"logger": "*",
				"writeTo": "console, file_all",
				"levels": "Trace,Info,Error,Warning"
			},
			{
				"logger": "*",
				"minLevel": "Trace",
				"maxLevel": "Trace",
				"writeTo": "file_trace",
				"levels": "Trace"
			},
			{
				"logger": "*",
				"minLevel": "Info",
				"maxLevel": "Info",
				"writeTo": "file_info",
				"levels": "Info"
			},
			{
				"logger": "*",
				"minLevel": "Warn",
				"maxLevel": "Warn",
				"writeTo": "file_warn",
				"levels": "Warning"
			},
			{
				"logger": "*",
				"minLevel": "Error",
				"maxLevel": "Error",
				"writeTo": "file_error",
				"levels": "Error"
			},
			{
				"logger": "*",
				"minLevel": "Fatal",
				"maxLevel": "Fatal",
				"writeTo": "file_fatal",
				"levels": "Fatal"
			}
		]
	}
}
