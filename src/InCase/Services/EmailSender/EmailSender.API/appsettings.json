{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "NLog": {
    "internalLogLevel": "Info",
    "extensions": [
      { "assembly": "NLog.Extensions.Logging" },
      { "assembly": "NLog.Web.AspNetCore" }
    ],
    "default-wrapper": {
      "type": "AsyncWrapper",
      "overflowAction": "Block"
    },
    "targets": {
      "console": {
        "type": "ColoredConsole",
        "layout": "| ${uppercase:${level}} |${longdate}|(${logger})|${message}",
        "rowHighlightingRules": [
          {
            "condition": "level == LogLevel.Info",
            "foregroundColor": "Green"
          },
          {
            "condition": "level == LogLevel.Error",
            "foregroundColor": "Red"
          },
          {
            "condition": "level == LogLevel.Fatal",
            "foregroundColor": "Red",
            "backgroundColor": "White"
          }
        ]
      },
      "file": {
        "type": "File",
        "fileName": "/root/logs/debug/email-api/log_all_${shortdate}.log",
        "layout": "| ${uppercase:${level}} |${longdate}|(${logger})|${message}"
      },
      "file_trace": {
        "maxLevel": "Trace",
        "type": "File",
        "fileName": "/root/logs/debug/email-api/log_trace_${shortdate}.log",
        "layout": "| ${uppercase:${level}} |${longdate}|(${logger})|${message}"
      },
      "file_info": {
        "maxLevel": "Info",
        "type": "File",
        "fileName": "/root/logs/debug/email-api/log_info_${shortdate}.log",
        "layout": "| ${uppercase:${level}} |${longdate}|(${logger})|${message}"
      },
      "file_warn": {
        "maxLevel": "Warning",
        "type": "File",
        "fileName": "/root/logs/debug/email-api/log_warn_${shortdate}.log",
        "layout": "| ${uppercase:${level}} |${longdate}|(${logger})|${message}"
      },
      "file_error": {
        "maxLevel": "Error",
        "type": "File",
        "fileName": "/root/logs/debug/email-api/log_error_${shortdate}.log",
        "layout": "| ${uppercase:${level}} |${longdate}|(${logger})|${message}"
      },
      "file_fatal": {
        "maxLevel": "Fatal",
        "type": "File",
        "fileName": "/root/logs/debug/email-api/log_fatal_${shortdate}.log",
        "layout": "| ${uppercase:${level}} |${longdate}|(${logger})|${message}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "console, file",
        "levels": "Trace,Info,Error,Warning"
      },
      {
        "logger": "Microsoft.EntityFrameworkCore.*",
        "minLevel": "Warn",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "file_trace",
        "levels": "Trace"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "file_info",
        "levels": "Info"
      },
      {
        "logger": "*",
        "minLevel": "Warn",
        "writeTo": "file_warn",
        "levels": "Warning"
      },
      {
        "logger": "*",
        "minLevel": "Error",
        "writeTo": "file_error",
        "levels": "Error"
      },
      {
        "logger": "*",
        "minLevel": "Fatal",
        "writeTo": "file_fatal",
        "levels": "Fatal"
      }
    ]
  }
}
